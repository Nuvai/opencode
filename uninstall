#!/usr/bin/env bash
#
# OpenCode Uninstall Script
#
# Usage:
#   curl -fsSL https://raw.githubusercontent.com/Nuvai/opencode/main/uninstall | bash
#   ./uninstall [--all]
#
# This script is a wrapper that calls the main install script with the uninstall subcommand.
#

# Pass all arguments to the install script with uninstall command
curl -fsSL https://raw.githubusercontent.com/Nuvai/opencode/main/install | bash -s -- uninstall "$@"
