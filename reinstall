#!/usr/bin/env bash
#
# OpenCode Reinstall Script
#
# Usage:
#   curl -fsSL https://raw.githubusercontent.com/Nuvai/opencode/main/reinstall | bash
#   ./reinstall [--version <version>]
#
# This script is a wrapper that calls the main install script with the reinstall subcommand.
#

# Pass all arguments to the install script with reinstall command
if [[ -n "${1:-}" ]] && [[ "$1" == "-v" || "$1" == "--version" ]]; then
    curl -fsSL https://raw.githubusercontent.com/Nuvai/opencode/main/install | bash -s -- reinstall "$@"
else
    curl -fsSL https://raw.githubusercontent.com/Nuvai/opencode/main/install | bash -s -- reinstall "$@"
fi
